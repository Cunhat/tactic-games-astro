---
import { cn } from "../lib/utils";

interface Props {
  title: string;
  img: string;
  className?: string;
}

const { title, img, className } = Astro.props;
---

<div
  style={{ "--image-url": `url(${img})` }}
  class={cn(
    "p-6 w-full h-full rounded-lg bg-[image:var(--image-url)] bg-cover bg-center shadow-lg transform lg:hover:scale-105 transition-transform duration-200 relative",
    className
  )}
>
  <div
    class="absolute top-0 right-0 left-0 bottom-0 bg-black/70 flex flex-col justify-center items-center gap-3"
  >
    <h3
      class="sm:text-3xl lg:text-4xl xl:text-3xl text-2xl font-bold text-gray-100"
    >
      {title}
    </h3>
  </div>
</div>
